{
	"compilerOptions": {
		"target": "ES2022",
		"useDefineForClassFields": true,
		"module": "NodeNext",
		"lib": ["ES2020"],
		"skipLibCheck": true,
		"esModuleInterop": true,
		"outDir": "lib",

		/* Bundler mode */
		"moduleResolution": "NodeNext",
		"resolveJsonModule": true,

		/* Linting */
		"strict": true,
		"noUnusedLocals": false,
		"noUnusedParameters": true,
		"noFallthroughCasesInSwitch": true
	},
	"ts-node": {
		"esm": true
	},
	"include": ["src"]
}
